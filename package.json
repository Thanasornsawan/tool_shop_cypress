{
  "name": "tool_shop_cypress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "report:clean": "rimraf web/reports/*",
    "report:merge": "mochawesome-merge web/reports/mocha/*.json > web/reports/mochawesome.json",
    "report:generate": "marge web/reports/mochawesome.json -f report -o web/reports --inline --charts --screenshots web/reports/mocha/assets",
    "test:with-report": "npm run report:clean && npm run cy:run && npm run report:merge && npm run report:generate"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/schematic": "^3.0.0",
    "@cypress/webpack-preprocessor": "^6.0.2",
    "@cypress/xpath": "^2.0.3",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "cy-verify-downloads": "^0.2.6",
    "cypress": "^14.0.0",
    "cypress-angular-unit-test": "^3.9.0",
    "cypress-multi-reporters": "^2.0.4",
    "cypress-real-events": "^1.14.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "pdf-parse": "^1.1.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "mocha-junit-reporter": "^2.2.1"
  }
}
