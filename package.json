{
  "name": "cypress-web-api-testing",
  "version": "1.0.0",
  "description": "Cypress Web and API Testing Framework",
  "scripts": {
    "cy:open:web": "cypress open --config-file cypress.config.ts --env type=web",
    "cy:open:api": "cypress open --config-file cypress.config.ts --env type=api",
    "cy:run:web": "cypress run --config-file cypress.config.ts --env type=web",
    "cy:run:api": "cypress run --config-file cypress.config.ts --env type=api",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    
    "report:clean:web": "rimraf web/reports/*",
    "report:clean:api": "rimraf api/reports/*",
    "report:clean:all": "rimraf {web,api}/reports/*",
    
    "report:merge:web": "mochawesome-merge web/reports/mocha/*.json > web/reports/mochawesome.json",
    "report:merge:api": "mochawesome-merge api/reports/mocha/*.json > api/reports/mochawesome.json",
    "report:merge:all": "mochawesome-merge {web,api}/reports/mocha/*.json > reports/mochawesome.json",
    
    "report:generate:web": "marge web/reports/mochawesome.json -f report -o web/reports --inline --charts --screenshots web/reports/mocha/assets",
    "report:generate:api": "marge api/reports/mochawesome.json -f report -o api/reports --inline --charts --screenshots api/reports/mocha/assets",
    "report:generate:all": "marge reports/mochawesome.json -f report -o reports --inline --charts --screenshots {web,api}/reports/mocha/assets",
    
    "test:web": "npm run report:clean:web && npm run cy:run:web && npm run report:merge:web && npm run report:generate:web",
    "test:api": "npm run report:clean:api && npm run cy:run:api && npm run report:merge:api && npm run report:generate:api",
    "test:all": "npm run report:clean:all && npm run cy:run:web && npm run cy:run:api && npm run report:merge:all && npm run report:generate:all"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-typescript": "^7.26.0",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@cypress/grep": "^4.1.0",
    "@cypress/schematic": "^3.0.0",
    "@cypress/webpack-preprocessor": "^6.0.2",
    "@cypress/xpath": "^2.0.3",
    "@types/node": "^22.10.7",
    "concurrently": "^9.1.2",
    "cy-verify-downloads": "^0.2.6",
    "cypress": "^14.0.0",
    "cypress-angular-unit-test": "^3.9.0",
    "cypress-multi-reporters": "^2.0.4",
    "cypress-plugin-steps": "^1.1.1",
    "cypress-real-events": "^1.14.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "pdf-parse": "^1.1.1",
    "ts-loader": "^9.5.2",
    "tsify": "^5.0.4",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "mocha-junit-reporter": "^2.2.1"
  }
}
